# Uptime Kuma Multi-Tenancy Environment Variables
# Copy this file to .env.mt and customize for your environment

# ===================
# Node Environment
# ===================
NODE_ENV=development

# ===================
# Database (PostgreSQL)
# ===================
DATABASE_TYPE=postgres
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=uptime_kuma
DATABASE_USER=kuma
DATABASE_PASSWORD=kuma
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# For production, use DATABASE_URL instead:
# DATABASE_URL=postgres://kuma:kuma@localhost:5432/uptime_kuma

# ===================
# Redis
# ===================
REDIS_URL=redis://localhost:6379

# ===================
# Multi-Tenancy
# ===================
MULTI_TENANT=true

# Base domain for tenant subdomains (e.g., acme.uptime.example.com)
TENANT_DOMAIN=localhost

# Allow new tenant signups
ENABLE_SIGNUP=true

# Default plan for new tenants (free, pro, enterprise)
DEFAULT_PLAN=free

# ===================
# Stripe (Billing)
# ===================
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Stripe Price IDs for plans
STRIPE_PRICE_ID_PRO_MONTHLY=price_xxx
STRIPE_PRICE_ID_PRO_YEARLY=price_xxx
STRIPE_PRICE_ID_ENTERPRISE_MONTHLY=price_xxx
STRIPE_PRICE_ID_ENTERPRISE_YEARLY=price_xxx

# ===================
# Workers
# ===================
WORKER_MODE=false
WORKER_ID=1
WORKER_COUNT=1

# ===================
# Application
# ===================
# Application URL (used for callbacks, emails, etc.)
APP_URL=http://localhost:3001

# Data directory
DATA_DIR=./data/

# ===================
# Security
# ===================
# JWT secret (generate a strong random string for production)
# JWT_SECRET=your-super-secret-key

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ===================
# Debugging
# ===================
# SQL_LOG=1
# DEBUG=*
