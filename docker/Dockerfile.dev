# Development Dockerfile for Uptime Kuma Multi-Tenancy
# This image is for local development with hot reloading

FROM node:20-slim

# Install build dependencies and tools needed at runtime
RUN apt-get update && apt-get install -y \
    python3 \
    make \
    g++ \
    git \
    procps \
    curl \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy package files first for better caching
COPY package*.json ./
COPY .npmrc ./

# Install all dependencies (including devDependencies)
RUN npm ci

# Copy source code (will be overridden by volume mounts in dev)
COPY . .

# Create data directory
RUN mkdir -p /app/data

# Expose ports
# 3000 - Frontend dev server (Vite)
# 3001 - Backend server
EXPOSE 3000 3001

# Default command (can be overridden)
CMD ["npm", "run", "dev"]
